.overlay {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: rgba(0,0,0,.5);
}
.overlay .modalbox {
  display: block;
  position: absolute;
  left: 35px;
  right: 35px;
  border-radius: 12px;
  background-color: #ec4078;
  background-size: 48px 48px;
  background-image: linear-gradient(135deg, 
    rgba(0,0,0,.0) 25%, rgba(0,0,0,.01) 0, 
    rgba(0,0,0,.01) 50%, rgba(0,0,0,.0) 0, 
    rgba(0,0,0,.0) 75%, rgba(0,0,0,.01) 0
  );  
}

.overlay .modalbox .coins {
  display: block;
  overflow: hidden;
  width: 128px;
  padding: 0px;
  margin: 36px auto 0px auto;
  border-radius: 24px;
  background: rgba(0,0,0,.15);
}
.overlay .modalbox .coins span {
  display: block;
  height: 48px;
  color: #db2863;
  font-size: 11pt;
  line-height: 48px;
  padding: 0px;
  border-radius: 24px;
}
.overlay .modalbox .coins span em {
  float: left; 
  display: block;
  height: 44px;
  color: #ec4078;
  font-size: 12pt;
  line-height: 44px;
  padding: 0px 15px;
  margin: 2px;
  border-radius: 22px;
  background: #fad759;
}
.overlay .modalbox .coins span var {
  float: left; 
  display: block;
  color: #ffffff;
  font-size: 12pt;
  font-weight: bold;
  padding: 0px 12px 0px 9px;
}
.overlay .modalbox .coins.active {
  background: rgba(0,0,0,.2);
}
.overlay .modalbox .coins.active span em {
  background: #fad759;
}

.overlay .modalbox .tip {
  display: block;
  padding: 25px;
}
.overlay .modalbox .tip span { 
  display: block;
  color: #f2c3d4;
  font-size: 14px;
  line-height: 24px;
}

.overlay .modalbox .controls {
  display: block;
  padding: 0px 25px 25px 25px;
}
.overlay .modalbox .controls .button {
  display: block;
  overflow: hidden;
  padding: 0px 3px 3px 3px;
  margin-top: 12px;
  border-radius: 12px;
  background: #db2863;
}
.overlay .modalbox .controls .button span {
  display: block;
  height: 36px;
  color: #db2863;
  font-size: 11pt;
  line-height: 36px;
  border-bottom: 3px solid #f2c3d4;
  border-radius: 10px;
  background: #fdecf2;
}
.overlay .modalbox .controls .button.active {
  padding: 3px;
}
.overlay .modalbox .controls .button.active span {
  border-bottom: 0px;
}