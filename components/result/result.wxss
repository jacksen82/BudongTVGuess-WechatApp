.overlay {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: rgba(0,0,0,.5);
}
.overlay .modalbox {
  display: block;
  padding: 15px;
  margin: 0px 35px;
  border-radius: 12px;
  background-color: #ec4078;
}
.overlay .modalbox .title {
  display: block;
  height: 42px;
}
.overlay .modalbox .title em { 
  display: block;
  height: 42px;
  font-size: 12pt;
  line-height: 42px;
  text-align: center;
  border-radius: 21px;
  background: rgba(0,0,0,.2);
}
.overlay .modalbox .title em.success {
  color: #db2863;
  font-weight: bold;
  background: #fad759;
}
.overlay .modalbox .title em.fail {
  color:#ffffff;
}
.overlay .modalbox .cover {
  display: block;
}
.overlay .modalbox .image {
  width: 100%;
  height: 100%;
}
.overlay .modalbox .cover .text {
  display: block;
  color: #f2c3d4;
  font-size: 11pt;
  text-align: center;
  line-height: 36px;
}

.overlay .modalbox .controls {
  display: block;
  padding-top: 20px;
}
.overlay .modalbox .controls .button {
  display: block;
  overflow: hidden;
  padding: 0px 3px 3px 3px;
  border-radius: 12px;
  background: #db2863;
}
.overlay .modalbox .controls .button span {
  display: block;
  height: 36px;
  color: #db2863;
  font-size: 11pt;
  line-height: 36px;
  border-bottom: 3px solid #f2c3d4;
  border-radius: 10px;
  background: #fdecf2;
}
.overlay .modalbox .controls .button span var {
  display: inline-block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  vertical-align: middle;
  padding: 0px 7px;
  margin: -2px 7px 0px 7px;
  border-radius: 5px;
  background: #ec4078;
}
.overlay .modalbox .controls .button.active {
  padding: 3px;
}
.overlay .modalbox .controls .button.active span {
  border-bottom: 0px;
}