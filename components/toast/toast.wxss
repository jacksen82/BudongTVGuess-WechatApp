.toastbox {
  display: block;
  position: fixed;
  top: 50%;
  left: 50%;
  width: 128px;
  height: 128px;
  font-size: 21pt;
  font-weight: bold;
  line-height: 128px;
  text-align: center;
  margin-top: -64px;
  margin-left: -64px;
  border-radius: 12px;
  background: rgba(0,0,0,.5);
}
.toastbox.add {
  color: #fad759;
}
.toastbox.minus {
  color: #fdecf2;
}