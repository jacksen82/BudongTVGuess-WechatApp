<!--level.wxml-->

<view class="toolbar">
  <button class="linkfloat right" hover-class="active">
    <span><em>金币</em><var>{{clientInfo.coins || 0}}</var></span>
  </button>
</view>

<view class="level">
  <view class="card" wx:for="{{levelItems}}" wx:key="item" wx:if="{{levelIndex == index}}">
    <view class="thumb"><image src="{{item.coverUrl}}" /></view>
    <view class="title">{{item.title}}</view>
    <button class="linkbutton" bindtap="unlock" wx:if="{{item.locked}}">
      <span>Unlock <var>Coins:{{item.coins}}</var></span>
    </button>
    <button class="button" bindtap="coutinue" wx:if="{{!item.locked}}">
      <span>Coutinue <var>{{item.doneCount}}/{{item.totalCount}}</var></span>
    </button>
  </view>
  <button class="arrow fleft" bindtap="prev" wx:if="{{levelIndex>=0}}">left</button>
  <button class="arrow fright" bindtap="next" wx:if="{{levelIndex<=levelItems.length-1}}">right</button>
</view>

<view class="tips">
  <em>游戏说明：</em>
  <dfn>根据听到的音乐来猜出电视节目的名称，答对继续下一题，打错结束</dfn>
</view>
