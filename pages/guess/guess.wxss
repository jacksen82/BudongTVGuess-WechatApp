/** guess.wxss **/

.toolbar {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  padding: 17px 16px;
}
.toolbar .linkfloat.right {
  float: right;
}

.player {
  display: block;
  position: fixed;
  top: 72px;
  left: 0px;
  right: 0px;
  bottom: 76vw;
}
.player .leftside {
  display: block;
  position: absolute;
  top:50%;
  left: 0px;
  width: 56px;
  height: 160px;
  padding: 0px 7px;
  margin-top: -80px;
}
.player .leftside .linkbutton {
  margin: 5px 0px;
}
.player .leftside .linkbutton span {
  height: auto;
  line-height: 24px;
  padding-top: 5px;
}
.player .leftside .linkbutton span var {
  display: block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  margin: 5px;
  border-radius: 10px;
  background: #ec4078;
}
.player .leftside .linkbutton span {
  padding-bottom: 1px;
}
.player .rightside {
  display: block;
  position: absolute;
  top: 50%;
  right: 0px;
  width: 56px;
  height: 100px;
  padding: 0px 7px;
  margin-top: -50px;
}
.player .rightside .linkbutton span {
  height: auto;
  line-height: 24px;
  padding-top: 7px;
}
.player .rightside .linkbutton span dfn {
  display: block;
  line-height: 20px;
}
.player .rightside .linkbutton span var {
  display: block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  margin: 5px;
  border-radius: 10px;
  background: #ec4078;
}
.player .rightside .linkbutton span {
  padding-bottom: 1px;
}
.player .mp3tvbox {
  display: block;
  position: absolute;
  top: 50%;
  left: 80px;
  right: 80px;
  height: 128px;
  margin-top: -96px;
}
.player .mp3tvbox .tvbox {
  width: 42vw;
}
.player .mp3tvbox .tvbox .arrow {
  height: 12vw;
}
.player .mp3tvbox .tvbox .box {
  padding: 7px 0px 7px 7px;
}
.player .mp3tvbox .tvbox .inner {
  height: 24vw;
  background-size: 100% 100%;
  background-image: linear-gradient(90deg, 
    #cc0000 25%, #ccff00 0, 
    #ccff00 50%, #cc00ff 0, 
    #cc00ff 75%, #00ccff 0, 
    #00ccff 100%, #cc0000 0
  );  
}
.player .mp3tvbox .tvbox .linkbutton {
  width: 16vw;
  margin: 4vw auto 0vw auto;
  border-radius: 50%;
}
.player .mp3tvbox .tvbox .linkbutton span {
  height: 14vw;
  text-align:center;
  border-radius: 50%;
}
.player .mp3tvbox .tvbox .linkbutton span var {
  display: inline-block;
  width: 0px;
  height: 0px;
  margin: 3.5vw 0px 0vw 5vw;
  border: 4vw solid transparent;
  border-left: 4vw solid #ec4078;
}
.player .mp3tvbox .tvbox .linkbutton span dfn {
  display: inline-block;
  width: 6vw;
  height: 6vw;
  margin: 4.5vw 0px 0vw 0px;
}
.player .mp3tvbox .tvbox .linkbutton span dfn:before {
  float: left;
  display: block;
  content: "";
  width: 2vw;
  height: 6vw;
  background:#ec4078;
}
.player .mp3tvbox .tvbox .linkbutton span dfn:after {
  float: right;
  display: block;
  content: "";
  width: 2vw;
  height: 6vw;
  background:#ec4078;
}

.answer {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 52vw;
  height: 12vw;
  text-align: center;
  padding: 6vw 0px;
}
.answer .item {
  display: inline-block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
  background: rgba(0,0,0,.25);
}

.options {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 2vw;
}
.options .item {
  float: left;
  display: block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
}