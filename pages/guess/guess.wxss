.toolbar {
  top: 0px;
  left: 0px;
  right: 0px;
  padding: 17px 16px;
}

.audiobar {
  display: block;
  position: fixed;
  top: 72px;
  left: 0px;
  right: 0px;
  bottom: 76vw;
}
.audiobar .button {
  display: block;
  overflow: hidden;
  padding: 0px 3px 3px 3px;
  margin: 5px 0px;
  border-radius: 12px;
  background: #db2863;
}
.audiobar .button span {
  display: block;
  height: auto;
  color: #db2863;
  font-size: 11pt;
  line-height: 24px;
  padding-top: 5px;
  padding-bottom: 1px;
  border-bottom: 3px solid #f2c3d4;
  border-radius: 10px;
  background: #fdecf2;
}
.audiobar .button span var {
  display: block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  margin: 5px;
  border-radius: 10px;
  background: #ec4078;
}
.audiobar .button.active {
  padding: 3px;
}
.audiobar .button.active span {
  border-bottom: 0px;
}
.audiobar .leftside {
  display: block;
  position: absolute;
  top: 50%;
  left: 0px;
  width: 64px;
  height: 160px;
  padding: 0px 12px;
  margin-top: -80px;
}
.audiobar .rightside {
  display: block;
  position: absolute;
  top: 50%;
  right: 0px;
  width: 64px;
  height: 80px;
  padding: 0px 12px;
  margin-top: -45px;
}
.audiobar .rightside .button span {
  height: 48px;
  line-height: 48px;
}
.audiobar .mp3tvbox {
  display: block;
  position: absolute;
  top: 50%;
  left: 90px;
  right: 90px;
  height: 128px;
  margin-top: -96px;
}

.titlewords {
  display: block;
  overflow: hidden;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 52vw;
  height: 12vw;
  text-align: center;
  padding: 6vw 0px;
}
.titlewords .item {
  display: inline-block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  vertical-align: middle;
  padding: 0px;
  margin: 1vw;
  background: rgba(0,0,0,.25);
}

.allwords {
  display: block;
  overflow: hidden;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 2vw;
}
.allwords .item {
  float: left;
  display: block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
}