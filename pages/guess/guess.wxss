/** guess.wxss **/

.toolbar {
  display: block;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  height: 36px;
  padding: 17px 16px;
}
.toolbar .link {
  height: 35px;
  font-size:15px;
  line-height: 35px;
}
.toolbar .link var {
  font-size: 12px;
}

.player {
  display: block;
  position: absolute;
  top: 70px;
  left: 0px;
  right: 0px;
  bottom: 240px;
  background:#ffcc00;
}
.player .link {
  display: block;
  width: 48px;
  height: 48px;
  font-size:12px;
}
.player .help {
  display: block;
  position: absolute;
  left: 0px;
  width: 48px;
  font-size:12px;
  background:#ffcc00;
}
.player .share {
  display: block;
  position: absolute;
  right: 0px;
  width: 48px;
  font-size:12px;
}
.player .audio {
  display: block;
  position: absolute;
  left: 50px;
  right: 50px;
  font-size:12px;
  background:#ffcc00;
}
.controls {
  display: block;
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 240px;
  background: #359098;
}
.controls .answer {
  display: block;
  height: 60px;
  background:#769098;
}
.controls .answer .item {
  float:left;
  display: block;
  width:40px;
  height:40px;
}
.controls .options {
  display: block;
}
.controls .options .item {
  float:left;
  display: block;
  width:40px;
  height:40px;
}