/** guess.wxss **/

.toolbar {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  padding: 17px 16px;
}
.toolbar .linkfloat.right {
  float: right;
}

.player {
  display: block;
  position: fixed;
  top: 72px;
  left: 0px;
  right: 0px;
  bottom: 74vw;
}
.player .leftside {
  display: block;
  position: absolute;
  top:50%;
  left: 0px;
  width: 64px;
  height: 160px;
  padding: 0px 7px;
  margin-top: -80px;
}
.player .leftside .linkbutton {
  margin: 5px 0px;
}
.player .leftside .linkbutton span {
  height: auto;
  line-height: 28px;
  padding-top: 5px;
}
.player .leftside .linkbutton span var {
  display: block;
  height: 24px;
  color: #ffffff;
  line-height: 24px;
  margin: 5px;
  border-radius: 9px;
  background: #ec4078;
}
.player .leftside .linkbutton span {
  padding-bottom: 1px;
}
.player .rightside {
  display: block;
  position: absolute;
  top: 50%;
  right: 0px;
  width: 64px;
  height: 100px;
  padding: 0px 7px;
  margin-top: -50px;
}
.player .rightside .linkbutton span {
  height: auto;
  line-height: 28px;
  padding-top: 7px;
}
.player .rightside .linkbutton span dfn {
  display: block;
  line-height: 22px;
}
.player .rightside .linkbutton span var {
  display: block;
  height: 24px;
  color: #ffffff;
  line-height: 24px;
  margin: 5px;
  border-radius: 9px;
  background: #ec4078;
}
.player .rightside .linkbutton span {
  padding-bottom: 1px;
}
.player .mp3tvbox {
  display: block;
  position: absolute;
  top: 50%;
  left: 88px;
  right: 88px;
  height: 128px;
  margin-top: -64px;
  background: #ff0000;
}
.player .mp3tvbox .tvbox {
  display: block;
}

.answer {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 52vw;
  height: 12vw;
  text-align: center;
  padding: 5vw 0px;
}
.answer .item {
  display: inline-block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
  background: rgba(0,0,0,.25);
}

.options {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 2vw;
}
.options .item {
  float: left;
  display: block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
}