.toolbar {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  padding: 17px 16px;
}
.toolbar .linkfloat.right {
  float: right;
}

.audio {
  display: block;
  position: fixed;
  top: 72px;
  left: 0px;
  right: 0px;
  bottom: 76vw;
}
.audio .leftside {
  display: block;
  position: absolute;
  top:50%;
  left: 0px;
  width: 56px;
  height: 160px;
  padding: 0px 7px;
  margin-top: -80px;
}
.audio .leftside .linkbutton {
  margin: 5px 0px;
}
.audio .leftside .linkbutton span {
  height: auto;
  line-height: 24px;
  padding-top: 5px;
}
.audio .leftside .linkbutton span var {
  display: block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  margin: 5px;
  border-radius: 10px;
  background: #ec4078;
}
.audio .leftside .linkbutton span {
  padding-bottom: 1px;
}
.audio .rightside {
  display: block;
  position: absolute;
  top: 50%;
  right: 0px;
  width: 56px;
  height: 100px;
  padding: 0px 7px;
  margin-top: -50px;
}
.audio .rightside .linkbutton span {
  height: auto;
  line-height: 24px;
  padding-top: 7px;
}
.audio .rightside .linkbutton span dfn {
  display: block;
  line-height: 20px;
}
.audio .rightside .linkbutton span var {
  display: block;
  height: 20px;
  color: #ffffff;
  font-size: 8pt;
  line-height: 20px;
  margin: 5px;
  border-radius: 10px;
  background: #ec4078;
}
.audio .rightside .linkbutton span {
  padding-bottom: 1px;
}
.audio .mp3tvbox {
  display: block;
  position: absolute;
  top: 50%;
  left: 80px;
  right: 80px;
  height: 128px;
  margin-top: -96px;
}

.titlewords {
  display: block;
  overflow: hidden;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 52vw;
  height: 12vw;
  text-align: center;
  padding: 6vw 0px;
}
.titlewords .item {
  display: inline-block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  vertical-align: middle;
  padding: 0px;
  margin: 1vw;
  background: rgba(0,0,0,.25);
}

.allwords {
  display: block;
  overflow: hidden;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 2vw;
}
.allwords .item {
  float: left;
  display: block;
  width: 10vw;
  height: 10vw;
  font-size:12pt;
  line-height: 10vw;
  padding: 0px;
  margin: 1vw;
}