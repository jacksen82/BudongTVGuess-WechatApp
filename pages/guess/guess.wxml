<!--guess.wxml-->

<view class="toolbar">
  <button class="linkfloat right" hover-class="active">
    <span><em>金币</em><var>{{clientInfo.coins || 0}}</var></span>
  </button>
</view>

<view class="player">
  <view class="leftside">
    <button class="linkbutton skip" hover-class='active'>
      <span>跳过 <var>-30</var></span>
    </button>
    <button class="linkbutton tip" hover-class='active'>
      <span>提示 <var>-50</var></span>
    </button>
  </view>
  <view class="rightside">
    <button class="linkbutton share" hover-class='active'>
      <span>
        <dfn>分享</dfn>
        <dfn>到群</dfn>
        <var>+100</var></span>
    </button>
  </view>
  <view class="mp3tvbox">
    <view class="tvbox">
      <span class="arrow">
        <var class="item left"></var>
        <var class="item right"></var>
      </span>
      <span class="box">
        <span class="circle">
          <dfn class="item"></dfn>
          <dfn class="item"></dfn>
        </span>
        <span class="inner">
          <button class="linkbutton" hover-class="active" bindtap="audioplay">
            <span>
              <var wx:if="{{!playing}}"></var>
              <dfn wx:if="{{playing}}"></dfn>
            </span>
          </button>
        </span>
      </span>
    </view>
  </view>
</view>
<view class="answer">
  <button class="item" hover-class="active" wx:for="{{programInfo.titleItems}}" wx:key="item" data-item="{{item}}"><em></em></button>
</view>
<view class="options">
  <button class="item" hover-class="active" wx:for="{{programInfo.charItems}}" wx:key="item" data-index="{{index}}" bindtap="chioce" animation="{{index==programCharIndex ? animation: null}}"><em>{{item.text}}</em></button>
</view>