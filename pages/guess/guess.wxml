<!--guess.wxml-->

<view class="toolbar">
  <button class="link fright" hover-class="active"><span><em>Coins</em><var>980</var></span></button>
</view>

<view class="player">
  <view class="help">
    <button class="link skip">
      tip <var>-30</var>
    </button>
    <button class="link tip">
      tip <var>-50</var>
    </button>
  </view>
  <view class="share">
    <button class="link share">
      share <var>+100</var>
    </button>
  </view>
  <view class="audio">
    <view class="tvbox">
      <button class="">play</button>
    </view>
  </view>
</view>
<view class="controls">  
  <view class="answer">
    <button class="item" hover-class="active" wx:for="{{programInfo.answerItems}}" wx:key="item"><em></em></button>
  </view>
  <view class="options">
    <button class="item" hover-class="active" wx:for="{{programInfo.optionItems}}" wx:key="item" data-item="{{item}}" bindtap="chioce"><em>{{item}}</em></button>
  </view>
</view>