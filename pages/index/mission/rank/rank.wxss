/* pages/index/mission/rank/rank.wxss */

.header {
  display: block;
  font-size: 14px;
  line-height: 26px;
  padding: 12px 15px 2px 15px; 
}
.header .avatar {
  display: block;
  width: 64px;
  height: 64px;
  margin: 0px auto;
  border-radius: 50%;
}
.header .title {
  display: block;
  color: #ec3851;
  font-size: 18px;
  text-align: center;
  padding-top: 10px;
}
.header .caption {
  display: block;
  width: 128px;
  height: 22px;
  color: #576b95;
  font-size: 14px;
  text-align: center;
  line-height: 22px;
  margin: 10px auto 5px auto;
  border:1px solid #576b95;
  border-radius: 12px;
  background: #ffffff;
}
.header .caption.done {
  color: #ffffff;
  border:1px solid #ec3851;
  background: #ec3851;
}
.header .desc {
  display: block;
  color: #353535;
  text-align: center;
}
.header .desc strong {
  color:#ec3851;
  font-weight: bold;
}

.players {
  display: block;
  padding: 0px 7px 0px 12px;
  margin-top: 10px;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  background: #f7f7fa;
}
.coins .item {
  display: block;
  height: 44px;
  font-size: 14px;
  line-height: 43px;
  padding: 0px 5px;
  border-bottom: 1px solid #eeeeee;
}
.coins .item:last-child{
  border-bottom: 0px;
}
.players .item .avatar {
  float: left;
  display: block;
  width: 32px;
  height: 32px;
  margin: 6px 0px;
  border-radius: 50%;
}
.players .item .nick {
  display: block;
  height: 44px;
  color: #576b95;
  font-size: 14px;
  line-height: 44px;
  margin-left: 48px;
  margin-right: 64px;
  border-bottom: 1px dotted #dfdfdf;
}
.players .item .score {
  float: right;
  display: block;
  width: 64px;
  height: 44px;
  color: #707070;
  font-size: 12px;
  line-height: 44px;
  text-align: right;
  border-bottom: 0.5px dotted #dfdfdf;
}
.players .item.winner .score {
  color: #ec3851;
}
.players .item:last-child .nick,
.players .item:last-child .score {
  border-bottom: 0px dotted #dfdfdf;
}
.players .item.self:before {
  content: '';
  display: block;
  position: absolute;
  left: 1px;
  width: 3px;
  height: 42px;
  margin-top: 1px;
  border-radius: 1px;
  background: #ec3851;
}

.controls {
  display: block;
  padding: 15px;
  text-align: center;
}
.controls .share {
  display: inline-block;
  color: #353535;
  font-size: 14px;
  margin: 0px 10px;
  border: 0.5px solid #dfdfdf;
  background: #fcfcfc;
}