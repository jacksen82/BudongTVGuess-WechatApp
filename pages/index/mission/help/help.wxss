/* pages/index/mission/help/help.wxss */

.player {
  display: block;
  position: absolute;
  overflow: hidden;
  width: 100%;
  height: 320px;
  padding: 35px 0px 0px 0px;
}
.player .coins {
  display: block;
  position: absolute;
  top: 10px;
  text-align: center;
  padding: 5px 9px;
  margin-left: 15px;
  border: 1px solid #dfdfdf;
  border-radius: 9px;
  background: #fcfcfc;
}
.player .coins em {
  display: block;
  color: #ec3851;
  font-size: 14px;
  font-weight: bold;
}
.player .coins dfn {
  display: block;
  color: #707070;
  font-size: 12px;
  padding-top: 0px;
}
.player .disc {
  display: block;
  position: absolute;
  left: 50%;
  width: 240px;
  height: 240px;
  margin-left: -120px;
}
.player .disc .main {
  display: block;
  position: absolute;
  width: 240px;
  height: 240px;
}
.player .disc .main.playing {
  animation: main_rotate_play 3600ms linear 10ms infinite;
}
.player .disc .needle {
  display: block;
  position: absolute;
  top: -140px;
  right: -140px;
  width: 300px;
  height: 300px;
  transform: rotate(-40deg);
}
.player .disc .needle.playing {
  transform: rotate(-40deg);
  animation: needle_rotate_play 360ms linear 10ms 1;
  animation-fill-mode: forwards;
}
.player .disc .needle.stoped {
  transform: rotate(-20deg);
  animation: needle_rotate_stop 360ms linear 10ms 1;
  animation-fill-mode: forwards;
}
.player .actions {
  display: block;
  position: absolute;
  top: 300px;
  width: 100%;
  text-align: center;
}
.player .actions .innerbox {
  display: block;
  width: 240px;
  margin: 0px auto;
}
.player .actions .innerbox .button {
  float: left;
  display: block;
  width: 80px;
  background: transparent;
}
.player .actions .innerbox .button em {
  display: block;
  width: 32px;
  height: 32px;
  padding: 2px;
  margin: 0px auto;
  border-radius: 50%;
  background: #353535;
}
.player .actions .innerbox .button em image {
  width: 32px;
  height: 32px;
} 
.player .actions .innerbox .button.tip, 
.player .actions .innerbox .button.help {
  margin-top: -20px;
}
.player .actions .innerbox .button dfn {
  display: block;
  height: 24px;
  color: #969696;
  font-size: 12px;
  line-height: 24px;
}
.player .actions .innerbox .button dfn small {
  font-size: 10px;
}
.player .actions .innerbox .button.disabled em {
  background: #cccccc;
}

/*
  求助区域
*/
.fromer {
  display: block;
  position: absolute;
  overflow: hidden;
  left: 0px;
  right: 0px;
  bottom: 0px;
}
.fromer .friend {
  display: block;
  padding: 10px;
  margin: 25px;
  border: 1px solid #dfdfdf;
  border-radius: 12px;
  background: #f9f9f9;
}
.fromer .friend .avatar {
  float: left;
  display: block;
  width: 64px;
  height: 64px;
  border-radius: 50%;
}
.fromer .friend .text {
  display: block;
  font-size: 12px;
  line-height: 22px;
  margin-left: 76px;
}
.fromer .friend .text .strong {
  color: #576b95;
  font-weight: bold;
}
.fromer .adbar {
  display: block;
}

@keyframes main_rotate_play {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@keyframes needle_rotate_play {
  100% {
    transform: rotate(-20deg);
  }
}
@keyframes needle_rotate_stop {
  100% {
    transform: rotate(-40deg);
  }
}