/* pages/index/mission/guess/guess.wxss */

.titlebar {
  display: block;
  height: 32px;
  padding: 6px 12px;
}
.titlebar .mission {
  float: left;
  display: block;
  height: 32px;
  border-radius: 16px;
  background: #909398;
}
.titlebar .mission .logo {
  float: left;
  display: block;
  width: 32px;
  height: 32px;
  border-radius: 16px;
}
.titlebar .mission .duration {
  float: left;
  display: block;
  color: #ffffff;
  font-size: 14px;
  line-height: 32px;
  text-align: center;
  padding: 0px 12px 0px 7px;
}
.titlebar .timespan {
  float: right;
  display: block;
  width: 42px;
  height: 32px;
  color: #ffffff;
  font-size: 14px;
  line-height: 32px;
  text-align: center;
  padding: 0px 15px;
  border-radius: 16px;
  background: #909398;
}

.player {
  display: block;
  position: absolute;
  overflow: hidden;
  top: 44px;
  width: 100%;
  height: 320px;
  padding: 35px 0px 0px 0px;
}
.player .coins {
  display: block;
  position: absolute;
  top: 10px;
  text-align: center;
  padding: 5px 9px;
  margin-left: 15px;
  border: 1px solid #dfdfdf;
  border-radius: 9px;
  background: #fcfcfc;
}
.player .coins em {
  display: block;
  color: #ec3851;
  font-size: 14px;
  font-weight: bold;
}
.player .coins dfn {
  display: block;
  color: #707070;
  font-size: 12px;
  padding-top: 0px;
}
.player .disc {
  display: block;
  position: absolute;
  left: 50%;
  width: 240px;
  height: 240px;
  margin-left: -120px;
}
.player .disc .main {
  display: block;
  position: absolute;
  width: 240px;
  height: 240px;
}
.player .disc .main.playing {
  animation: main_rotate_play 3600ms linear 10ms infinite;
}
.player .disc .needle {
  display: block;
  position: absolute;
  top: -140px;
  right: -140px;
  width: 300px;
  height: 300px;
  transform: rotate(-40deg);
}
.player .disc .needle.playing {
  transform: rotate(-40deg);
  animation: needle_rotate_play 360ms linear 10ms 1;
  animation-fill-mode: forwards;
}
.player .disc .needle.stoped {
  transform: rotate(-20deg);
  animation: needle_rotate_stop 360ms linear 10ms 1;
  animation-fill-mode: forwards;
}
.player .actions {
  display: block;
  position: absolute;
  top: 300px;
  width: 100%;
  text-align: center;
}
.player .actions .innerbox {
  display: block;
  width: 240px;
  margin: 0px auto;
}
.player .actions .innerbox .button {
  float: left;
  display: block;
  width: 80px;
  background: transparent;
}
.player .actions .innerbox .button em {
  display: block;
  width: 32px;
  height: 32px;
  padding: 2px;
  margin: 0px auto;
  border-radius: 50%;
  background: #353535;
}
.player .actions .innerbox .button em image {
  width: 32px;
  height: 32px;
} 
.player .actions .innerbox .button.tip, 
.player .actions .innerbox .button.help {
  margin-top: -20px;
}
.player .actions .innerbox .button dfn {
  display: block;
  height: 24px;
  color: #969696;
  font-size: 12px;
  line-height: 24px;
}
.player .actions .innerbox .button dfn small {
  font-size: 10px;
}
.player .actions .innerbox .button.disabled em {
  background: #cccccc;
}

.confirm {
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
}
.confirm .inner {
  display: block;
}
.confirm .inner .worditem {
  float: left;
  display: block;
  width: 28px;
  height: 28px;
  color: #ffffff;
  font-size: 14px;
  text-align: center;
  line-height: 28px;
  border: 2px solid #ffffff;
  border-left: 0px;
  background: #353535;
}
.confirm .inner .worditem:first-child {
  border-left: 1px solid #dfdfdf;
  border-radius: 5px 0px 0px 5px;
}
.confirm .inner .worditem:last-child {
  border-radius: 0px 5px 5px 0px;
}
.confirm .inner .worditem.highlight {
  border-top: 2px solid #ec3851;
  border-radius: 0px;
  background: #ec3851;
}
.confirm .options {
  display: block;
  position: absolute;
  left: 0px;
  bottom: 68px;
  width: 240px;
  text-align: center;
  padding-top: 3px;
  border-radius: 5px;
  background: #ec3851;
}
.confirm .options .optionitem {
  float: left;
  display: block;
  width: 36px;
  height: 36px;
  color: #ffffff;
  line-height: 36px;
  text-align: center;
  border: 3px solid #ec3851;
  border-top: 0px;
  border-left: 0px;
  border-radius: 5px;
  background: #353535;
}
.confirm .options .optionitem.left {
  border-left: 3px solid #ec3851;
}
.confirm .hint {
  clear: both;
  display: block;
  height: 36px;
  color: #969696;
  font-size: 12px;
  line-height: 36px;
  text-align: center;
}

@keyframes main_rotate_play {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@keyframes needle_rotate_play {
  100% {
    transform: rotate(-20deg);
  }
}
@keyframes needle_rotate_stop {
  100% {
    transform: rotate(-40deg);
  }
}