/* pages/index/index.wxss */

.main {
  padding-top: 10vw;
}
.main .logo {
  display: block;
  width: 50vw;
  height: 50vw;
  margin: 0px auto;
}
.main .logo image {
  display: block;
  width: 100%;
  height: 100%;
}
.main .name {
  display: block;
  color: #fefefc;
  font-size: 10vw;
  font-weight: bold;
  text-align: center;
  line-height: 10vw;
  letter-spacing: 3vw;
  margin-top: -2vw;
  z-index: 1;
}
.main .name:before {
  content: attr(data-text);
  position: absolute;
  text-shadow: 0px 0px 2px rgba(255,255,255,.75),
    -2px -2px 4px rgba(0,0,0,.25),
    4px 4px 6px rgba(0,0,0,.5);
  z-index: -1;
} 
.main .slogan {
  display: block;
  color: rgba(255,255,255,0.5);
  font-size: 12pt;
  line-height: 7vw;
  text-align: center;
  padding: 5vw 10vw 0px 10vw;
  text-shadow: 0px 0px 3px #000000;
}

.menu {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 0vw 8vw;
}

.dialog-content {
  display: block;
  padding: 25px;
}
.dialog-content .avatar {
  display: block;
  width: 96px;
  height: 96px;
  margin: 0px auto;
  border-radius: 50%;
}
.dialog-content .info {
  display: block;
  line-height: 20pt;
  padding: 25px 15px 0px 15px;
}
.dialog-content .info em {
  font-size: 12pt;
}
.dialog-content .info strong {
  color: #d23878;
  font-weight: bold;
}