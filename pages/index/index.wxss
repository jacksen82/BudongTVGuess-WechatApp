/**index.wxss**/

.adbar {
  display: block;
  text-align: center;
  padding: 1px 10px;
}

.missions {
  display: block;
}
.missions .item {
  display: block;
  height: 64px;
  padding: 18px 0px;
  margin: 0px 12px;
  border-bottom: 0.5px solid #efefef;
}
.missions .item .avatar {
  float: left;
  display: block;
  width: 64px;
  height: 64px;
  border-radius: 50%;
}
.missions .item .intro {
  margin-left: 80px;
}
.missions .item .intro .title {
  display: block;
  height: 18px;
  color: #353535;
  font-size: 14px;
  font-weight: bold;
  line-height: 18px;
}
.missions .item .intro .title var {
  display: inline-block;
  font-size: 12px;
  vertical-align: middle;
}
.missions .item .intro .author {
  display: block;
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  padding-top: 4px;
  padding-left: 3px;
}
.missions .item .intro .author .nick {
  color: #576b95;
}
.missions .item .intro .author .nick small {
  color: #909398;
}
.missions .item .intro .affix {
  display: block;
  height: 18px;
  padding-top: 4px;
  padding-left: 3px;
}
.missions .item .intro .affix .tags {
  display: block;
  overflow: hidden;
  height: 18px;
  margin-right: 96px;
}
.missions .item .intro .affix .tags .tag {
  float: left;
  display: block;
  height: 18px;
  color: #ffffff;
  font-size: 12px;
  line-height: 18px;
  padding: 0px 3px;
  margin-right: 5px;
  border-radius: 3px;
  background: #ec3851;
}
.missions .item .intro .affix .tags .tag.friend {
  background: #66CD00;
}
.missions .item .intro .affix .tags .tag.group {
  background: #6A5ACD;
}
.missions .item .intro .affix .tags .tag.hot {
  background: #FF8C00;
}
.missions .item .intro .affix .count {
  float: right;
  display: block;
  width: 96px;
  height: 18px;
  color: #909398;
  font-size: 12px;
  text-align: right;
  line-height: 18px;
}
.missions .item.playing .intro .affix .count {
  color: #576b95;
}

.missions .nodata {
  display: block;
  height: 44px;
  color: #969696;
  font-size: 14px;
  line-height: 44px;
  text-align: center;
  padding: 25px 0px 0px 0px;
}

.datamore {
  display: block;
  padding: 10px 0px;
}
.datamore .loading {
  display: block;
  height: 50px;
  color: #909398;
  font-size: 12px;
  text-align: center;
  line-height: 50px;
}

.controls .button {
  position: fixed;
  right: 12px;
  bottom: 12px;
  width: 64px;
  height: 64px;
  line-height: 16px;
  text-align: center;
  padding: 16px 0px;
  border-radius: 32px;
  background: #ec3851;
}
.controls .button dfn {
  display: block;
  color: #ffffff;
  font-size: 14px;
}