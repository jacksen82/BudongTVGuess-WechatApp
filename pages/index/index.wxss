/** index.wxss **/
.cover {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 250px;
}
.cover .logo {
  display: block;
  overflow: hidden;
  width: 100%;
  padding-top: 15vw;
}
.cover .screen {
  height: 100%;
  color:#ffffff;
  font-size: 48pt;
  text-align: center;
  background-size: 30px 30px;
  background: -webkit-linear-gradient(180deg, yellowgreen 0,yellowgreen 25%, cornflowerblue 25%,cornflowerblue 50%,gold 50%,gold 75%,orangered 75%,orangered 100%);
  text-shadow: 0px 0px 6px rgba(0,0,0,.5);
}
.cover .title {
  display: block;
  color: #fdecf2;
  font-size: 18pt;
  text-align: center;
  padding-top:25px;
  text-shadow: 0px 0px 12px rgba(0,0,0,.2);
}

.controls {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 220px;
  padding: 0px 0px;
}
.controls .start {
  display: block;
  overflow: hidden;
  padding: 0px 5px 5px 5px;
  margin-top: 30px;
  margin-left: 50px;
  margin-right: 50px;
  border-radius: 31px;
  background: #db2863;
}
.controls .start span {
  display: block;
  height: 56px;
  color: #db2863;
  font-size: 15pt;
  line-height: 56px;
  border-bottom: 5px solid #e1b929;
  border-radius: 30px;
  background: #fad759;
}
.controls .start.active {
  padding: 5px;
}
.controls .start.active span {
  border-bottom: 0px;
}
.controls .start.loading span {
  color: #bbbbbb;
  border-bottom: 5px solid #dfdfdf;
  background: #dfdfdf;
}
.controls .link {
  display: block;
  color: rgba(255,255,255,.5);
  font-size: 11pt;
  line-height: 40px;
  margin: 35px 50px 0px 50px;
  border-radius: 20px;
  background: rgba(0,0,0,.1);
}
.controls .link.active {
  background: rgba(0,0,0,.2);
}
.controls .store {
  display: block;
  height: 86px;
  padding: 0px;
  margin: 20px 15px 0px 15px;
  background:rgba(0,0,0,.1);
}
.controls .store .image {
  float: left;
  display: block;
  width: 86px;
  height: 86px;
}
.controls .store .text {
  display: block;
  height: 86px;
  text-align: left;
  margin-left: 92px;
}
.controls .store .text em {
  display:-webkit-box; 
  overflow:hidden; 
  height: 44px;
  color: rgba(255,255,255,.8);
  font-size: 14px;
  line-height: 22px;
  padding: 3px 5px 3px 3px;
  text-align: left;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.controls .store .text dfn {
  float: left;
  display: block;
  height: 28px;
  color: rgba(255,255,255,.5);
  font-size: 12px;
  line-height: 28px;
  padding: 0px 10px;
  margin-top: 0px;
  margin-right: 5px;
  border-radius: 5px;
  background: rgba(0,0,0,.1);
}
.controls .store .text dfn var {
  text-decoration:line-through;
}
.controls .store .text dfn strong {
  color: #fad759;
  font-size: 15px;
  font-weight: bold;
}
.controls .store .text code {
  float: right;
  display: block;
  color: rgba(255,255,255,.5);
  font-size: 12px;
  padding-right: 9px;
}