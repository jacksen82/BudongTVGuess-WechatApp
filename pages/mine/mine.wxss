/* pages/mine/mine.wxss */

.userinfo {
  text-align: center;
  padding: 35px 0px;
}
.userinfo .button {
  display: inline-block;
  height: 44px;
  color: #ffffff;
  font-size: 14px;
  line-height: 44px;
  padding: 0px 15px;
  margin: 0px auto;
  border-radius: 22px;
  background: #ec3851;
}
.userinfo .text {
  display: block;
  height: 44px;
  color: #969696;
  font-size: 12px;
  line-height: 44px;
}

.header {
  padding: 30px 0px 20px 0px;
}
.header .avatar {
  display: block;
  width: 96px;
  height: 96px;
  margin: 0px auto;
  border-radius: 50%;
}
.header .nick {
  display: block;
  color: #ec3851;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
.header .other {
  display: block;
  color: #909398;
  font-size: 12px;
  text-align: center;
  margin-top: 10px;
}

.cells .caption {
  display: block;
  color: #969696;
  font-size: 12px;
  line-height: 24px;
  padding: 12px 12px 7px 12px;
}
.cells .group .item.disabled {
  color: #969696;
}
.cells .group .item .numeric {
  float: right;
  color:#ec3851;
  font-weight: bold;
}
.cells .group .item .tip {
  color: #969696;
  font-size: 12px;
}
.cells .group.mission {
  padding-left: 0px;
}
.cells .group.mission .item {
  border-bottom: 0px;
}
.cells .group.mission .item .logo {
  float: left;
  display: block;
  width: 36px;
  height: 36px;
  margin: 4px;
  border-radius: 5px;
}
.cells .group.mission .item .title {
  display: block;
  margin-left: 48px;
  border-bottom: 1px solid #efefef;
}
.cells .group.mission .item .title .tag {
  display: inline-block;
  height: 18px;
  color: #ffffff;
  font-size: 12px;
  line-height: 18px;
  vertical-align: middle;
  padding: 0px 3px;
  margin-left: 3px;
  border-radius: 3px;
  background: #FF8C00;
}
.cells .group.mission .item .title .tag.recommend {
  background: #FF8C00;
}
.cells .group.mission .item .title .tag.hot {
  background: #ec3851;
}
.cells .group .item.create {
  padding-left: 53px;
}