/**app.wxss**/

page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  position: fixed;
  overflow: auto;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: #2e2e2e;
  background-size: 60px 60px;
  background-position: 0 0, 30px 30px;
  background-image: -webkit-linear-gradient(45deg, #343434 25%, transparent 25%, transparent 75%, #343434 75%, #343434), 
                    -webkit-linear-gradient(45deg, #343434 25%, transparent 25%, transparent 75%, #343434 75%, #343434);
  -webkit-overflow-scrolling: touch;
}

button {
  font-size: 14px;
  background: transparent;
}

button::after {
  content: none;
}

.button-hover {
  background: transparent;
}

.placeholder {
  color: #cccccc;
}
