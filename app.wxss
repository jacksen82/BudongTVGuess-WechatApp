/**app.wxss**/

page {
  background: #ffffff;
}
button::after {
  content: none;
}

/*
  表格控件
*/
.datalist {
  display: block;
  padding: 0px 7px 0px 12px;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  background: #f9f9f9;
}
.datalist .item {
  display: block;
  height: 44px;
  font-size: 14px;
  line-height: 43px;
  padding: 0px 5px;
  border-bottom: 1px solid #eeeeee;
}
.datalist .loading {
  display: block;
  height: 50px;
  color: #909398;
  font-size: 12px;
  text-align: center;
  line-height: 50px;
}

/*
  列表控件
*/
.cells {
  padding: 5px 0px;
}
.cells .group {
  display: block;
  padding: 0px 7px 0px 12px;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  background: #f9f9f9;
}
.cells .group.top {
  margin-top: 15px;
}
.cells .group.bottom {
  margin-bottom: 15px;
}
.cells .group:first-child {
  margin-top: 0px;
}
.cells .group .item {
  display: block;
  height: 44px;
  color: #353535;
  font-size: 14px;
  text-align: left;
  line-height: 44px;
  padding-left: 5px;
  border: 0px;
  border-bottom: 1px solid #efefef;
  background: transparent;
}
.cells .group .item .input {
  height: 44px;
  line-height: 44px;
}
.cells .group .item .picker {
  display: block;
}
.cells .group .item:last-child {
  border-bottom: none;
}
.cells .group .item.create {
  color: #ec3851;
}


/*
  底部控制栏
*/
.bottombar {
  display: block;
  padding: 15px;
}
.bottombar .share {
  height: 44px;
  color: #353535;
  font-size: 14px;
  line-height: 44px;
  border: 1px solid #dfdfdf;
  background: #fcfcfc;
}
.bottombar .delete {
  height: 44px;
  color: #ec3851;
  font-size: 14px;
  line-height: 44px;
  margin-top: 15px;
  border: 1px solid #ec3851;
  background: #ffffff;
}
.bottombar .submit {
  height: 44px;
  color: #ffffff;
  font-size: 14px;
  line-height: 44px;
  background: #ec3851;
}
.bottombar .submit.hover{
  background: #d7223b;
}
