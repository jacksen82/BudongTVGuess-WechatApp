/** app.wxss **/
page {
  background-color: #ec4078;
}

.toolbar {
  display: block;
  position: fixed;
}
.toolbar .button {
  display: block;
  overflow: hidden;
  padding: 0px;
  border-radius: 18px;
  background: rgba(0,0,0,.15);
}
.toolbar .button span {
  display: block;
  height: 36px;
  color: #db2863;
  font-size: 11pt;
  line-height: 35px;
  padding: 0px;
  border-radius: 18px;
}
.toolbar .button span em {
  float: left; 
  display: block;
  height: 32px;
  color: #ec4078;
  font-size: 11pt;
  line-height: 32px;
  padding: 0px 12px;
  margin: 2px;
  border-radius: 16px;
  background: #fad759;
}
.toolbar .button span image {
  float: left; 
  display: block;
  width:32px;
  height: 32px;
  padding: 0px;
  margin: 2px;
  border-radius: 16px;
}
.toolbar .button span var {
  float: left; 
  display: block;
  color: #ffffff;
  font-size: 10pt;
  font-weight: bold;
  padding: 0px 12px 0px 9px;
}
.toolbar .button span dfn {
  float: left; 
  display: block;
  color: #ffffff;
  font-size: 10pt;
  padding: 0px 15px 0px 9px;
}
.toolbar .button span strong {
  float: left; 
  display: block;
  color: #ffffff;
  font-size: 10pt;
  font-weight: normal;
  padding: 0px 15px;
}
.toolbar .button.left {
  float: left;
}
.toolbar .button.right {
  float: right;
}
.toolbar .button.active {
  background: rgba(0,0,0,.2);
}
.toolbar .button.active span em {
  background: #fad759;
}